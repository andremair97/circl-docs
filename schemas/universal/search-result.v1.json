{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://circl.dev/schemas/search-result.v1.json",
  "title": "Search Result v1",
  "type": "object",
  "required": ["id", "title", "summary", "score", "dataSource", "badges"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "score": { "type": "number" },
    "dataSource": {
      "type": "array",
      "items": { "type": "string" }
    },
    "badges": {
      "type": "array",
      "items": { "type": "string" }
    },
    "url": { "type": "string", "format": "uri" },
    "product": { "type": "object" },
    "company": { "type": "object" }
  },
  "examples": [
    {
      "id": "result-1",
      "title": "Refurbished Laptop",
      "summary": "Upgraded and tested, 1-year warranty.",
      "score": 0.87,
      "dataSource": ["ebay"],
      "badges": ["used", "warranty"],
      "url": "https://example.com/laptop",
      "product": { "sku": "A1" },
      "company": { "name": "Example Store" }
    }
  ]
}
