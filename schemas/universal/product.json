{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://circl.dev/schemas/universal/product.json",
  "title": "Universal Product",
  "type": "object",
  "required": ["id", "title", "provenance"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "brand": { "type": "string" },
    "identifiers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "gtin": { "type": "string" },
        "model": { "type": "string" }
      }
    },
    "classification": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "packaging": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "summary": { "type": "string" }
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url"],
        "additionalProperties": false,
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "kind": { "type": "string" }
        }
      }
    },
    "repairs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": { "type": "string" },
          "difficulty": { "type": "string" },
          "time": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "pricing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "amount": { "type": "number" },
        "currency": { "type": "string" }
      }
    },
    "borrow": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "location": { "type": "string" },
        "availability": { "type": "string" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["source", "url", "fetched_at"],
      "additionalProperties": false,
      "properties": {
        "source": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "fetched_at": { "type": "string", "format": "date-time" }
      }
    }
  }
}
